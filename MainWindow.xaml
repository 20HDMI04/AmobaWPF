<Window x:Class="AmobaWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AmobaWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10" Height="50px" VerticalAlignment="Top">
            <TextBlock Text="X csapat: 0" FontSize="16" x:Name="XScore" Margin="10" />
            <TextBlock Text="O csapat: 0" FontSize="16" x:Name="OScore" Margin="10"/>
            <TextBlock Text="Aktuális csapat:" FontSize="16" Margin="10,10,0,10"/>
            <TextBlock Text="X" FontSize="16" x:Name="CurrentTeam" Margin="5,10,10,10"/>
            <Button Content="Új játék" Margin="10" x:Name="newGameButton" Click="newGameButton_Click" />
        </StackPanel>
        <UniformGrid x:Name="PlayBoard" Margin="10,60,10,10">
            
        </UniformGrid>
    </Grid>
</Window>
